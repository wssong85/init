	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
	
	<session-config>
		<session-timeout>600</session-timeout>
	</session-config>
	
	<error-page>
		<error-code>404</error-code>
		<location>/code404.jsp</location>
	</error-page>
	
	<error-page>
