$(function() { 
$(".vertical_menu_list > a").off("mouseenter").on("mouseenter",function() {
if ($(this).hasClass("close")) {
$(this).siblings("ul.vertical_menu_sub").slideToggle(500);
$(this).toggleClass('open');
}
});

$(".vertical_menu_list").off("mouseenter").not(this).on("mouseenter",function() {
if ($(".vertical_menu_list").not(this).children().hasClass("close")) {
$(".vertical_menu_list").not(this).children("ul.vertical_menu_sub").slideUp(500).dequeue();
}
});

$(".vertical_menu_list > a").not(this).on("mouseenter",function() {
if ($(".vertical_menu_list > a").hasClass('open')) {
$(".vertical_menu_list > a").not(this).removeClass('open');
}
});

});





